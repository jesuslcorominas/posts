<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Error" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Item" parent="TextAppearance.AppCompat.Body1">
        <item name="android:padding">@dimen/margin_normal</item>
    </style>

    <style name="Item.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Item.Content">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="Item.Author">
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@color/xlight_grey</item>
    </style>

</resources>
